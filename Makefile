###############################################################################
# FILE: Makefile
#
# Author: Dan Whitman
##############################################################################
TARGET = solutions
.PHONY: all lemmas clean

#==============================================================================
all:
#==============================================================================
	pdflatex -halt-on-error $(TARGET).tex

#==============================================================================
lemmas:
#==============================================================================
	./lemmas.py
	pdflatex -halt-on-error lemmas.tex

#==============================================================================
theorems:
#==============================================================================
	pdflatex -halt-on-error theorems.tex

#==============================================================================
errata:
#==============================================================================
	pdflatex -halt-on-error errata.tex

#==============================================================================
clean:
#==============================================================================
	rm -f *.aux *.log *.pdf *.out *.toc
	rm -f -r python/__pycache__
	rm -f lemmas_content.tex
